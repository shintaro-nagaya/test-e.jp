{% extends "admin/base.html.twig" %}
{% block title %}パスワード変更{% endblock %}
{% block body %}

<h2 class="h2 l_admin__title">
  パスワード変更
</h2>

{{ form_start(form, {
  attr: {
    "id": "input-form"
  }
} )}}
  <div class="l_form__row l_form__row--3box">
    {{ form_row(form.name) }}
    {{ form_row(form.email) }}
    {{ form_row(form.plain_password) }}
  </div>

  {% include "admin/include/_formBtn.html.twig" with {
    addDeleteBtn: false,
    isCreate: false
  } %}
{{ form_end(form) }}
{% endblock %}